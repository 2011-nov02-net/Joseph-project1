@model Project1.WebApp.Models.CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @for(int i = 0; i<Model.ProductNames.Count; ++i) //var productName in Model.ProductNames
                {
                        <label> @Model.ProductNames[i] </label>
                        <input asp-for="@Model.Quantities[i]" class="form-control" />
                        <span asp-validation-for="Quantities" class="text-danger"></span>
                }
            </div>
                <div class="form-group">
                    <input type="submit" value="Create Order" class="btn btn-primary" style="fill: burlywood" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Customers</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

